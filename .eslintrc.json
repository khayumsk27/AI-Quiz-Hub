{
  "env": {
    "browser": true,
    "es2021": true
  },
  "globals": {
    "window": "readonly",
    "document": "readonly",
    "localStorage": "readonly",
    "bootstrap": "readonly",
    "Chart": "readonly",
    "quizApp": "writable",
    "aiGenerator": "writable",
    "showNotification": "writable",
    "requireAuth": "writable",
    "updateUIForAuthenticatedUser": "writable",
    "updateUIForUnauthenticatedUser": "writable",
    "setShortAnswer": "writable"
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-console": "off",
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_", "varsIgnorePattern": "^(app|data|name|id|fn|leaderboard)$" }],
    "no-case-declarations": "off",
    "no-empty": "off",
    "no-undef": "off",
    "prefer-const": "off",
    "no-useless-escape": "off"
  }
}
