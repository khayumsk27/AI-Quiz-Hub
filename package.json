{
  "name": "quizwise",
  "version": "1.0.0",
  "description": "Enterprise-level AI-powered quiz platform with intelligent grading and real-time analytics",
  "main": "index.html",
  "scripts": {
    "start": "live-server --port=3000 --host=localhost --entry-file=index.html",
    "build": "npm run minify-css && npm run minify-js",
    "minify-css": "cleancss -o dist/styles.min.css assets/css/styles.css",
    "minify-js": "terser assets/js/*.js -o dist/scripts.min.js --source-map",
    "deploy": "firebase deploy",
    "test": "jest",
    "lint": "eslint assets/js/*.js",
    "lint:fix": "eslint assets/js/*.js --fix",
    "format": "prettier --write \"**/*.{js,html,css,json,md}\"",
    "validate": "html-validate index.html",
    "lighthouse": "lighthouse http://localhost:3000 --output=html --output-path=./lighthouse-report.html",
    "serve": "http-server -p 8080 -c-1",
    "dev": "concurrently \"npm run serve\" \"npm run watch:css\"",
    "watch:css": "chokidar \"assets/css/*.css\" -c \"npm run minify-css\"",
    "optimize": "npm run minify-css && npm run minify-js && npm run validate",
    "analyze": "bundlesize",
    "security": "npm audit",
    "clean": "rimraf dist/",
    "prebuild": "npm run clean && npm run lint",
    "postbuild": "npm run lighthouse"
  },
  "keywords": [
    "quiz",
    "education",
    "ai",
    "learning",
    "assessment",
    "firebase",
    "pwa",
    "bootstrap",
    "javascript"
  ],
  "author": {
    "name": "QuizWise Team",
    "email": "dev@quizwise.com",
    "url": "https://quizwise.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/quizwise.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/quizwise/issues"
  },
  "homepage": "https://quizwise.com",
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "bundlesize": "^0.18.1",
    "chokidar-cli": "^3.0.0",
    "clean-css-cli": "^5.6.2",
    "concurrently": "^8.2.0",
    "eslint": "^8.57.0",
    "html-validate": "^8.7.4",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "lighthouse": "^11.4.0",
    "live-server": "^1.2.2",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "terser": "^5.26.0"
  },
  "dependencies": {
    "bootstrap": "^5.3.2",
    "chart.js": "^4.4.1"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "bundlesize": [
    {
      "path": "assets/css/styles.css",
      "maxSize": "50 kB"
    },
    {
      "path": "assets/js/*.js",
      "maxSize": "200 kB"
    }
  ],
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "pwa": {
    "name": "QuizWise",
    "short_name": "QuizWise",
    "theme_color": "#00C2FF",
    "background_color": "#0D1117",
    "display": "standalone",
    "scope": "/",
    "start_url": "/"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "testMatch": ["<rootDir>/tests/**/*.test.js"],
    "collectCoverageFrom": [
      "assets/js/**/*.js",
      "!assets/js/firebase-config.js"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": ["eslint:recommended"],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "globals": {
      "firebase": "readonly",
      "bootstrap": "readonly",
      "Chart": "readonly"
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "error",
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 4,
    "semi": true,
    "singleQuote": true,
    "printWidth": 100
  }
}
